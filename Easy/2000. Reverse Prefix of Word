class Solution {
    public String reversePrefix(String word, char ch) {
        int ind=word.indexOf(ch);
        if(ind==-1)return word;

        char[] arr=word.toCharArray();
        int left=0,right=ind;

        while(left<right) {
            char temp=arr[left];
            arr[left]=arr[right];
            arr[right]=temp;
            left++;
            right--;
        }

        return new String(arr);
    }
}
